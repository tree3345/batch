<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/batch
    http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!--股票信息保存-->
    <job id="eastMoneyStockSaveJob" restartable="false">
        <!-- 1.股票行情-->
        <step id="eastMoneyStockSaveStep">
            <tasklet>
                <chunk reader="eastMoneyStockCodesReader" processor="eastMoneyStockDataReqProcessor" writer="eastMoneyStockDataWriter"
                       commit-interval="100">
                </chunk>
            </tasklet>
        </step>
       <!-- <step id="saveErrReqUrlsStep">
            <tasklet ref="saveErrReqUrlTasklet"/>
        </step>-->
    </job>
    <!--股票信息-->
    <beans:bean id="eastMoneyStockCodesReader" class="org.mybatis.spring.batch.MyBatisPagingItemReader" scope="step">
        <beans:property name="queryId" value="com.lz.stock.mapper.StockCodeBaseMapper.dbDate"/>
        <beans:property name="sqlSessionFactory" ref="sqlMapClient"/>
    </beans:bean>

    <beans:bean id="eastMoneyStockDataReqProcessor" class="com.lz.stock.step.EastMoneyStockDataReqProcessor" scope="step">
        <beans:property name="reqStyle" value="#{jobParameters['reqStyle']}"/>
        <beans:property name="reqPageSize" value="#{jobParameters['reqPageSize']}"/>
    </beans:bean>
    <beans:bean id="eastMoneyStockDataWriter" class="org.springframework.batch.item.file.FlatFileItemWriter" scope="step">
        <beans:property name="resource" value="file:#{jobParameters['stock.file']}"/>
        <beans:property name="lineAggregator">
            <beans:bean class="org.springframework.batch.item.file.transform.PassThroughLineAggregator"/>
        </beans:property>
        <beans:property name="lineSeparator" value=""/>
        <beans:property name="encoding" value="GBK"/><!--文件编码-->
        <beans:property name="appendAllowed" value="false"/><!--是否在原文件后增加-->
        <beans:property name="shouldDeleteIfExists" value="true"/><!--文件如果存在，先删除再创建-->
        <beans:property name="headerCallback" ref="headerCopier" />
    </beans:bean>
    <beans:bean id="headerCopier"  class="com.lz.stock.step.HeaderCopyCallback">
        <beans:property name="header" value="${eastMoney_stock_header}"/>
    </beans:bean>
    <!--<beans:bean id="saveErrReqUrlTasklet" class="com.lz.stock.step.ExecuteSQLTasklet">
        <beans:property name="dataSource" ref="dataSource"/>
        <beans:property name="sql" value="INSERT INTO ERR_REQ_URLS(url) values()"/>
    </beans:bean>-->

</beans:beans>
